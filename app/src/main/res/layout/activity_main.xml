<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/miles_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="@string/miles"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/sel_conv_label"
        app:layout_constraintTop_toBottomOf="@+id/kms_label" />

    <TextView
        android:id="@+id/sel_conv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="@string/select_conversion"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kms_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="@string/kilometers"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/sel_conv_label"
        app:layout_constraintTop_toBottomOf="@+id/sel_conv_label" />

    <EditText
        android:id="@+id/kms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="#D6D5D5"
        android:ems="10"
        android:fontFamily="@font/product_sans_bold"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textAlignment="viewStart"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/kms_label"
        app:layout_constraintStart_toEndOf="@+id/kms_label" />

    <EditText
        android:id="@+id/miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="#d6d5d5"
        android:ems="10"
        android:fontFamily="@font/product_sans_bold"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textAlignment="viewStart"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/miles_label"
        app:layout_constraintStart_toEndOf="@+id/miles_label" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#4081ED"
        android:elevation="16dp"
        android:fontFamily="@font/product_sans_regular"
        android:onClick="convert"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/convert"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miles" />

    <TextView
        android:id="@+id/ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:text="646" />

</androidx.constraintlayout.widget.ConstraintLayout>